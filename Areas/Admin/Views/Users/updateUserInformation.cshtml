@model Code_First___Technology_Products.Areas.Admin.ViewModel.updateUserVMAdmin

@{
    ViewBag.Title = "Cập nhật User";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<style>
    .row {
        margin-top: 20px;
    }

    #formRegister {
        width: 600px;
        padding: 20px;
        margin: 0 auto;
        box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
    }
</style>
<div id="formRegister">
    @using (Html.BeginForm("updateUserInformation", "Users", "Admin", FormMethod.Post))
    {
        <h4 style="text-align: center!important;">Cập nhật thông tin User</h4>
        //Id
        <div class="row">
            <div class="col-md">
                @Html.LabelFor(temp => temp.Id)
                @Html.TextBoxFor(temp => temp.Id, new { @class = "form-control", @Value = @Model.Id, @readonly = "readonly" })
                @Html.ValidationMessageFor(temp => temp.Id)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.CustomerName)
                @Html.TextBoxFor(temp => temp.CustomerName, new { @class = "form-control", @Value = @Model.CustomerName })
                @Html.ValidationMessageFor(temp => temp.CustomerName)
            </div>
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.Username)
                @Html.TextBoxFor(temp => temp.Username, new { @class = "form-control", @Value = @Model.Username })
                @Html.ValidationMessageFor(temp => temp.Username)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.Email)
                @Html.TextBoxFor(temp => temp.Email, new { @class = "form-control", @Value = @Model.Email })
                @Html.ValidationMessageFor(temp => temp.Email)
            </div>
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.MobilePhone)
                @Html.TextBoxFor(temp => temp.MobilePhone, new { @class = "form-control", @Value = @Model.MobilePhone })
                @Html.ValidationMessageFor(temp => temp.MobilePhone)
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.DateOfBirth)
                @Html.TextBoxFor(temp => temp.DateOfBirth, new { @class = "form-control", @Value = @Model.DateOfBirth, type = "date" })
                @Html.ValidationMessageFor(temp => temp.DateOfBirth)
            </div>
            <div class="col-md-6">
                @Html.LabelFor(temp => temp.Gender)
                @Html.TextBoxFor(temp => temp.Gender, new { @class = "form-control", @Value = @Model.Gender })
                @Html.ValidationMessageFor(temp => temp.Gender)
            </div>
        </div>
        <div class="row">
            <div class="col-md">
                @Html.LabelFor(temp => temp.Address)
                @Html.TextBoxFor(temp => temp.Address, new { @class = "form-control", @Value = @Model.Address })
                @Html.ValidationMessageFor(temp => temp.Address)
            </div>
        </div>
        <button type="submit" class="btn btn-success" style="margin-top: 30px;">Cập nhật</button> 
        <span style="margin-top: 30px;" class="btn btn-danger"><a href="/Admin/Users/Index" style="text-decoration:none; color: white;">Cancel</a></span>
        
    }
</div>


