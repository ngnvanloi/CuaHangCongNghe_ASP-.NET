                                            <label for="ID" class="form-label">Product ID</label>
                                            <input type="text" class="form-control" id="ID" name="ProductID" value="@Model.ProductID" readonly>
                                        </div>
                                        <div class="mb-1" style="display: none">
                                            <label for="NAME" class="form-label">Customer ID</label>
                                            <input type="text" class="form-control" id="NAME" name="Id" value="@ViewBag.CustomerID" readonly>
                                        </div>
                                        <div class="mb-1">
                                            <label for="SDT" class="form-label">Quantity</label>
