        <!--CHI TIẾT CẤU HÌNH SẢN PHẨM-->
        <div class="row" style=" padding: 0 12px;">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row" style="">Thông số kĩ thuật</th>
                    </tr>
                    <tr>
                        <th scope="row">Brand</th>
                        <td>@ViewBag.Brand.BrandName</td>
                    </tr>
                    <tr>
                        <th scope="row">Origin</th>
                        <td>@ViewBag.Brand.Country</td>
                    </tr>
                    <tr>
                        <th scope="row">Product Name</th>
                        <td>@ViewBag.ProductTotal.ProductName</td>
                    </tr>
                    <tr>
                        <th scope="row">Screen Size</th>
                        <td>@Model.ScreenSize</td>
                    </tr>
                    <tr>
                        <th scope="row">Battery Capacity</th>
                        <td>@Model.BatteryCapacity</td>
                    </tr>
                    <tr>
                        <th scope="row">Camera Solution</th>
                        <td>@Model.CameraResolution</td>
                    </tr>
                    <tr>
                        <th scope="row">RAM</th>
                        <td>@Model.Ram GB</td>
                    </tr>
                    <tr>
                        <th scope="row">ROM</th>
                        <td>@Model.Rom GB</td>
                    </tr>

                </tbody>
            </table>
        </div>
        

        <!--FORM MUA NGAY-->
        <div class="row" style=" padding: 0 12px;">
            <!--form mua ngay-->
            <!--
                thuộc tính

            -->
            @{
                addToOrderVM addToOrderVM = new addToOrderVM();
            }
            <div id="addToOrder" class="" style="max-width: 500px; margin: 10px auto;">
                <!-- padding-top: 60px-->
                <form action="/Home/addToOrder" method="post" style="text-align: left">
                    <!-- #region information Product -->
                    <div class="row">
                        <div class="card mb-3 position-relative" style=" border-radius: 0px; min-height: 200px; border: none">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="@ViewBag.ProductTotal.ProductImage" class="img-fluid rounded-start" alt="@ViewBag.ProductTotal.ProductName">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@ViewBag.ProductTotal.ProductName</h5>
                                        <p class="card-text">@ViewBag.ProductTotal.ProductDescription</p>
                                        <p class="card-text"><small class="text-body-secondary">Giá: <span style="color: red; font-weight: bold">@ViewBag.ProductTotal.Price</span> $</small></p>
                                        <!--form-->
                                        <div class="mb-1" style="display: none">
                                            <label for="ID" class="form-label">Order Date</label>
                                            <input type="text" class="form-control" id="ID" name="OrderDate" value="@DateTime.Now" readonly>
                                        </div>
                                        <div class="mb-1" style="display: none">
                                            <label for="NAME1" class="form-label">CustomerID</label>
                                            <input type="text" class="form-control" id="NAME1" name="CustomerID" value="@ViewBag.CustomerID" readonly>
                                        </div>
                                        <div class="mb-1" style="display: none">
                                            <label for="NAME2" class="form-label">ProductID</label>
                                            <input type="text" class="form-control" id="NAME2" name="ProductID" value="@Model.ProductID" readonly>
                                        </div>
                                        <div class="mb-1" style="display: none">
                                            <label for="NAME3" class="form-label">Price</label>
                                            <input type="text" class="form-control" id="NAME3" name="Price" value="@ViewBag.ProductTotal.Price" readonly>
                                        </div>
                                        <div class="mb-1" style="display: none">
                                            <label for="NAME4" class="form-label">Total</label>
                                            <input type="text" class="form-control" id="NAME4" name="TotalPrice" value="0" readonly>
                                        </div>
                                        <div class="mb-1">
                                            <label for="SDT" class="form-label">Quantity</label>
                                            <input type="text" class="form-control" id="SDT" aria-describedby="quantity" name="Quantity" required>
                                            <div id="quantity" class="form-text" style="color: orange">Please enter an valid number !</div>
                                        </div>
                                        <!--submit-->
                                        <button type="submit" class="btn btn-success">Add to order</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>


        <!--FORM THÊM VÀO GIỎ HÀNG-->
        <div class="row" style=" padding: 0 12px;">
            <!--form thêm vào giỏ hàng-->
            <!--
                thuộc tính
                ProductID
                Quatity
                CustumerID / AppUserId
